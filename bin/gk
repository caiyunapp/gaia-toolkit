#!/usr/bin/env bash

if [ -z "$GAIA_ROLE" ]; then export GAIA_ROLE="release"; fi

ORG=`pwd`
CUR="${BASH_SOURCE[0]}";
if([ -h "${CUR}" ]) then
  while([ -h "${CUR}" ]) do CUR=`readlink "${CUR}"`; done
fi
pushd . > /dev/null
cd `dirname ${CUR}` > /dev/null
CUR=`pwd`;
popd  > /dev/null

if [ "$1" == "" ] ; then
  cd $GAIA_HOME
else
  array=( $@ )
  len=${#array[@]}
  args=${array[@]:1:$len}
  cmd="${CUR}/../scripts/$1.py"

  cd ${CUR}/../
  $cmd --cwd $ORG $args
  cd ${ORG}
fi
